@model IEnumerable<Youtube2.Model.Profile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrLikesT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrDislikesT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrSubscribers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrLikesT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrDislikesT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrSubscribers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subscription.SubscriptionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfileId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProfileId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProfileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
