@model IEnumerable<Youtube2.Model.Videos>

@{
    ViewData["Title"] = "Index";
    string userId = ViewData["UserId"] as string;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NrLikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrDislikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrComments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NrLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrDislikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Video)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profile.ProfileId)
            </td>
            <td>
                @if (userId == item.ProfileId)
                {
                    <a asp-action="Edit" asp-route-id="@item.VideosId">Edit</a>
                }

                <a asp-action="Details" asp-route-id="@item.VideosId"> Details </a>

                @if (userId == item.ProfileId)
                {
                    <a asp-action="Delete" asp-route-id="@item.VideosId"> Delete </a>
                }

                @if (this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.VideosId">Edit</a>                   
                    <a asp-action="Delete" asp-route-id="@item.VideosId"> Delete </a>

                }
            </td>
        </tr>
}
    </tbody>
</table>
